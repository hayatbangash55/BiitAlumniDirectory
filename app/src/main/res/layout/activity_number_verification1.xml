<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="411dp"
            android:layout_height="240dp"
            android:src="@drawable/background_gradient" />

        <TextView
            android:id="@+id/tv_codeVerification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Code Verification"
            android:textColor="#fff"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="170dp"
            android:layout_height="178dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:src="@drawable/verification_img1" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="296dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:lineSpacingExtra="5sp"
        android:text="Enter your new Phone No."
        android:textAlignment="center"
        android:textColor="@color/tv_onWhite"
        android:textSize="20sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_phoneNo"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:counterEnabled="true"
        app:counterMaxLength="13"
        android:layout_gravity="center"
        app:errorTextAppearance="@style/error_appearance">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_local_phone_black_24dp"
            android:drawablePadding="20dp"
            android:hint="Phone No."
            android:inputType="phone"
            android:maxLength="13"
            android:textColor="#191944"
            android:textSize="20dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_Register"
        android:layout_width="270dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/gradient_button"
        android:onClick="btn_onClick_Submit"
        android:text="Send Code"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

</LinearLayout>