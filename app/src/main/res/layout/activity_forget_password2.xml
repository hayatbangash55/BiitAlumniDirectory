<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="411dp"
        android:layout_height="250dp"
        android:src="@drawable/background_gradient"/>


    <TextView
        android:id="@+id/tv_codeVerification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Forget Password"
        android:textColor="#ffffff"
        android:textSize="36sp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="164dp"
        android:layout_height="178dp"
        android:layout_marginTop="145dp"
        android:src="@drawable/forgetimg1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_marginLeft="90dp"
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="How do you want to get the code to reset your password ?"
        android:textColor="#41b177"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/imageView2"/>


    <RadioGroup
        android:id="@+id/rg_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_description"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="25dp"
        android:background="@drawable/green_border">

        <RadioButton
            android:id="@+id/rb_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="email"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:textColor="#191944"/>

        <RadioButton
            android:id="@+id/rb_phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="phoneNo"
            android:textSize="20dp"
            android:textColor="#191944"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="270dp"
        android:layout_height="57dp"
        android:background="@drawable/gradient_button"
        android:onClick="btn_onClick_Submit"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>